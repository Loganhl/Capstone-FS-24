import pandas as pd
from sklearn.ensemble import IsolationForest
import matplotlib.pyplot as plt
import os
import numpy as np

file_path = os.path.join('AuthenticationTesting', 'test3.csv')
df = pd.read_csv(file_path)

iso_forest = IsolationForest(contamination=0.2, random_state=50)

iso_forest.fit(df[['TypeAverage', 'MouseAverage', 'TestAverage']])

df['anomaly'] = iso_forest.predict(df[['TypeAverage', 'MouseAverage', 'TestAverage']])


df['anomaly'] = df['anomaly'].map({1: 0, -1: 1})

if df['anomaly'].sum() > 0:
    
    print(f"Warning: {df['anomaly'].sum()} anomalies detected in the dataset.")

print(df)

plt.scatter(df['TypeAverage'], df['MouseAverage'], c=df['anomaly'], cmap='coolwarm')
plt.xlabel('Type Average')
plt.ylabel('Mouse Average')
plt.title('Isolation Forest Anomaly Detection')
plt.show()


